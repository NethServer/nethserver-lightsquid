{
    use esmith::ConfigDB;
    use esmith::util;
    my $confdb = esmith::ConfigDB->open;

    my $alias = $lightsquid{'alias'} || "";

    # initialize alias if needed
    if ($alias eq "") {
        $alias = esmith::util::genRandomHash();
        $confdb->set_prop('lightsquid','alias',$alias);
    }

    my $allowHosts = ${'httpd-admin'}{'AllowHosts'} || '';
    if ($allowHosts ne '') {
       # Convert from comma separated list to space separated
       $allowHosts =~ s/,/ /g;
       # Make sure that /32 ValidFrom specs don't cause Apache problems.
       $allowHosts =~ s:/255.255.255.255::g;
    }

    $OUT = "
<IfModule !cgi_module>
    LoadModule cgi_module modules/mod_cgi.so
</IfModule>

Alias /$alias /usr/share/lightsquid/cgi

<Directory /usr/share/lightsquid/cgi>
    DirectoryIndex index.cgi
    Options ExecCGI
    AddHandler cgi-script .cgi
    AllowOverride None
    Order deny,allow
    Deny from all
    Allow from localhost $allowHosts
</Directory>

";
}
